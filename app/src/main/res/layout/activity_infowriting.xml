<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InfoWritingActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/buttonCancel"
        android:background="#ffffff"
        android:id="@+id/ImageContainer">

        <Button
            android:id="@+id/AddPicbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Pic"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:layout_below="@id/buttonCancel"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/ImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/buttonCancel"
            android:layout_marginTop="10dp"
             />
    </RelativeLayout>


    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/editTextName"
        android:text="Name"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImageContainer"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/Name"
        android:hint="Name" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_alignBaseline="@+id/editBtnDate"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Date"/>

    <Button
        android:id="@+id/editBtnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_toRightOf="@id/Date"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/transparent" />

    <!--
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_toRightOf="@id/Date"
        android:layout_marginTop="16dp"
        android:hint="Date"/>-->

    <TextView
        android:id="@+id/Seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Date"
        android:layout_alignBaseline="@+id/editTextSeat"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Seat"/>

    <EditText
        android:id="@+id/editTextSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBtnDate"
        android:layout_toRightOf="@id/Seat"
        android:layout_marginTop="16dp"
        android:hint="Seat"/>

    <TextView
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Seat"
        android:layout_alignBaseline="@+id/editTextNote"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Note"/>

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSeat"
        android:layout_toRightOf="@id/Note"
        android:layout_marginTop="16dp"
        android:hint="Note"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/buttonCancel"
        android:text="Save" />


    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Cancel" />


</RelativeLayout>