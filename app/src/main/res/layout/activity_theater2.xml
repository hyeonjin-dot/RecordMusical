<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AISeatActivity">

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Exit" />

    <Button
        android:id="@+id/buttonBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/buttonExit"
        android:text="Before" />

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앉은 자리입니다."
        android:layout_below="@id/buttonExit"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/reSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/res"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/recommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이자리는 어떠세요?"
        android:layout_below="@id/reSeat"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>


    <LinearLayout
        android:id="@+id/recSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommand"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>